<!--ame.wxml-->
<view class="ame">

 <view class="ame-a">
   <view class="ame-img"><image src="{{img}}" class="in-img" background-size="cover" model="scaleToFill"></image></view>
   <view class="ame-title">{{title}}</view>
 </view>

 <view>
   <view class="ame-intro">{{intro}}</view>
 </view>

   <view class="ame-c">
    <view class="ame-context">{{context}}</view>
    <view>{{method}}</view>
    <view>{{functions}}</view>
    <view>{{exit}}</view>
   </view>
   
 </view>
 <button bindtap='dl'>登录</button>
 <button bindtap='pay'>支付</button>

<view wx:for="{{courseList}}" wx:for-item="course" class='course-pannle-item' wx:for-index="idx">
<view class='video-item'>
    <video wx:if='{{idx==playIndex}}' id='video{{idx}}' autoplay='{{true}}' show-center-play-btn="{{false}}" src='{{course.videoUrl}}' controls="true" objectFit="cover">
    </video>
    <image class='video-cover' wx:if='{{idx!=playIndex}}' mode='widthFix' src='{{course.coverUrl}}'></image>
    <image class='video-play-btn' wx:if='{{idx!=playIndex}}' mode='widthFix' data-index='{{idx}}' bindtap='videoPlay'></image>
    <text wx:if='{{idx!=playIndex}}' class='video-duration fs-28'>{{course.duration}}</text>
  </view>
</view>